{% extends "base.html.twig" %}

{% block title %}Registration
{% endblock %}

{% block body %}
	<div class="container">
		<h1>User Registration</h1>
		{{ form_start(userForm) }}

		<div>
			{{form_label(userForm.pseudonyme)}}<br>
			{{form_widget(userForm.pseudonyme)}}
			{{form_errors(userForm.pseudonyme)}}

		</div>

		<div>
			{{form_label(userForm.email)}}<br>
			{{form_widget(userForm.email)}}
			{{form_errors(userForm.email)}}

		</div>

		<div>
			{{form_label(userForm.password)}}<br>
			{{form_widget(userForm.password)}}
			{{form_errors(userForm.password)}}

		</div>

		<button type="submit">Save</button>


		{{ form_end(userForm) }}
	</div>
{% endblock %}
